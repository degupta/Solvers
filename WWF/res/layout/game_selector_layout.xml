<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="10dp" >
    	<LinearLayout
    	    android:id="@+id/linearLayout1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:paddingLeft="0dp">
		    
    	    <RelativeLayout
        		android:id="@+id/relativeLayout2"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:background="@drawable/gameslist_player_icon"
        		android:padding="00dp">
	    	    
	    	    <TextView
		    	    android:id="@+id/player_first_letter"
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:layout_alignParentLeft="true"
		    	    android:text="P"
		    	    android:textAppearance="?android:attr/textAppearanceLarge"
		    	    android:textColor="#000000"
		    	    android:textSize="35sp"
		    	    android:paddingLeft="10dp"/>
    	    
		   	    <TextView
		   	        android:id="@+id/player_first_letter_score"
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:text="10"
		    	    android:textColor="#000000"
		    	    android:textSize="15sp"
		    	    android:layout_alignParentTop="true"
		    	    android:layout_toRightOf="@id/player_first_letter"
		    	    android:paddingLeft="0dp"/>
		   	</RelativeLayout>
    	    
    	    <RelativeLayout
        		android:id="@+id/relativeLayout1"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content">
        			
    	        		<TextView
				    	    android:id="@+id/friend_name"
				    	    android:layout_width="wrap_content"
				    	    android:layout_height="wrap_content"
				    	    android:layout_alignParentLeft="true"
				    	    android:text="Example With Friends with Devansh"
				    	    android:textColor="#000000" />
    	        		
    	        		<TextView
				    	    android:id="@+id/date"
				    	    android:layout_width="wrap_content"
				    	    android:layout_height="wrap_content"
				    	    android:layout_alignParentLeft="true"
				    	    android:text="March 31, 2013 3:01 PM"
				    	    android:textColor="#666666"
				    	    android:layout_below="@id/friend_name" />
    	        		
    	        		<TextView
				    	    android:id="@+id/last_move"
				    	    android:layout_width="wrap_content"
				    	    android:layout_height="wrap_content"
				    	    android:layout_alignParentLeft="true"
				    	    android:text="Last move 6 days ago"
				    	    android:textColor="#0000AA"
				    	    android:layout_below="@id/date" />
        	</RelativeLayout>
    	    
    	</LinearLayout>
		
    	

</RelativeLayout>